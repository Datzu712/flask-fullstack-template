{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2023",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@interfaces/*": [
        "./src/ts/interfaces/*"
      ],
      "@components/*": [
        "./src/ts/components/*"
      ],
    }
  },
  "include": [
    "src/ts/**/*.ts"
  ],
}